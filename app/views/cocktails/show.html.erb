<% if @cocktail.photo.url %>


  <div class="card"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
  url('<%= cl_image_path @cocktail.photo, height: 400, width: 400, crop: :fill %>')">

    <h1>Cocktails#show</h1>
    <p>Find me in app/views/cocktails/show.html.erb</p>

      <%= @cocktail.id %>
      <%= @cocktail.name %>

      <%= link_to "add dose", new_cocktail_dose_path(@cocktail) %>

      <% @cocktail.doses.each do |dose| %>
      <%=  dose.description %> <%= dose.ingredient.name %> <br>

      <% end  %>

    <% if @cocktail.photo %>
    <%=  cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>


    <% end %>

  </div>
<% end %>
